<Window x:Class="WPF3D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1000" Width="1200" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" MouseMove="Window_MouseMove" MouseDown="Window_MouseDown" MouseUp="Window_MouseUp">
    <Grid>
      
		<Rectangle Fill="White"/>
		<Viewport3D Name="myViewport3D"/>
		<StackPanel>
			<TextBlock Name="textBlockCameraPosition"/>
			<TextBlock Name="textBlockCameraLookDirection"/>
			<TextBlock Name="textBlockCameraFieldOfView"/>
		</StackPanel>
		
		<Rectangle Width="3" Height="3" Fill="Red" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	</Grid>
</Window>
